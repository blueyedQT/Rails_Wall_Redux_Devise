<!DOCTYPE html>
<html>
<head>
  <title>WallReduxDevise</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="row header">
		<h1 class="col-md-8">The Wall</h1>
		<% if user_signed_in? %>
		<p class="col-md-2 pheader">Welcome <%= current_user.first_name %>!</p>
		<%= link_to 'Sign Off', destroy_user_session_path, method: :delete %>
		<% end %>
	</div>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
